{% layout 'default.liquid' %}
{% block 'content' %}
<h1>Jogo #{{ game.id }}</h1>

<form id="new-buyin" method="post" enctype="x-www-formurlencoded">
  <label for="dolar">Valor DÃ³lar</label>
  <input id="dolar" type="number" name="dolar" min="100" max="1000" required />
  <small>Valor em centavos. Ex.: R$ 5,50 = 550</small>
  <label for="royalFlushFee">Taxa Royal Flush</label>
  <input id="royalFlushFee" type="number" name="royalFlushFee" min="1" max="99" required />
  <small>Valor em % sem casas decimais. Ex.: 1% = 1</small>
  <button type="submit">
    Cadastrar BuyIn
  </button>
</form>

{% unless buyIns == empty %}
  <ul>
    {% for buyIn in buyIns %}
      <li>[{{ buyIn.createdAt }}] {{ buyIn.player.name }}</li>
    {% endfor %}
  </ul>
{% else %}
  <p>Nenhum Buy In cadastrado</p>
{% endunless %}
{% endblock %}
